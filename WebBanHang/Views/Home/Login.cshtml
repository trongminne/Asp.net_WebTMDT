@model WebBanHang.Context.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta charset="utf-8">


<div class="card mx-auto" style="max-width: 430px; margin-top:50px;">
    <div class="card-body">
        <h4 class="card-title mb-4">Đăng nhập</h4>
        <div class="card-body">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email", @id = "Email" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Mật khẩu")
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                </div>

                <div class="form-group">
                    <a href="~/Home/Forgot" class="float-right">Quên mật khẩu?</a>
                    <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />

                </div>

                <div class="form-group">
                </div>
            }
        </div>
    </div>
</div>
<p class="text-center mt-4">Bạn có tài khoản chưa? <a href="~/Home/Register">Đăng kí</a></p>
<br><br>


